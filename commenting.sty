	\comm@validname{#1}%
	\comm@date@check{#2}%
	\if@comm@dateok%
	\comm@if@enabled{#1}%
		{\comm@color{#1}{#3}}%
		\comm@logcomment{#1}{#2}{change: #3}{\ChangedMarkL}%
	\else\null#3\null%
	\fi%\fi%
}

